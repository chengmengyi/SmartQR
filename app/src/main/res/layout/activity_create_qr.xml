<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FA">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:src="@drawable/bg3"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back"
        android:layout_margin="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_view"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create QR"
        android:textSize="16sp"
        android:textColor="#031727"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"/>
    <View
        android:id="@+id/bg_view"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:layout_margin="12dp"
        android:background="@drawable/bg_ffffff_8dp"
        app:layout_constraintTop_toBottomOf="@id/iv_back"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:textSize="14sp"
        android:textColor="#8A8A8A"
        android:background="@null"
        android:gravity="start"
        android:textColorHint="#C1C2C6"
        android:hint="Please enter textâ€¦"
        app:layout_constraintTop_toTopOf="@id/bg_view"
        app:layout_constraintLeft_toLeftOf="@id/bg_view"
        app:layout_constraintRight_toRightOf="@id/bg_view"
        app:layout_constraintBottom_toTopOf="@id/tv_create"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_create"
        android:layout_width="99dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:text="Create"
        android:textSize="13sp"
        android:visibility="gone"
        android:layout_margin="12dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_005dfe_10dp"
        app:layout_constraintRight_toRightOf="@id/bg_view"
        app:layout_constraintBottom_toBottomOf="@id/bg_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>