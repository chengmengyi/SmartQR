<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="205dp">
    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/native_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_f8f8fa_12dp">
            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/native_media"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/native_logo"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tag1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/native_media"/>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/native_logo"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_install"
                android:layout_width="76dp"
                android:layout_height="32dp"
                android:text="Install"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_005dfe_10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/native_logo"
                app:layout_constraintBottom_toBottomOf="@id/native_logo"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#031727"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toTopOf="@id/native_logo"
                app:layout_constraintLeft_toRightOf="@id/native_logo"
                app:layout_constraintRight_toLeftOf="@id/native_install"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#727272"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toBottomOf="@id/native_title"
                app:layout_constraintLeft_toRightOf="@id/native_logo"
                app:layout_constraintRight_toLeftOf="@id/native_install"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.gms.ads.nativead.NativeAdView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/cover1"
        android:scaleType="fitXY"/>
</RelativeLayout>