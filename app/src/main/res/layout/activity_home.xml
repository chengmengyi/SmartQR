<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:src="@drawable/bg3"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/logo_text2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_set"
        app:layout_constraintBottom_toBottomOf="@id/iv_set"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_set"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_margin="16dp"
        android:src="@drawable/icon_set"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_view"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llc_scan"
        android:layout_width="0dp"
        android:layout_height="152dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/bg_f8f8fa_12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_set"
        app:layout_constraintRight_toLeftOf="@id/llc_create">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="83dp"
            android:layout_height="73dp"
            android:src="@drawable/scan"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/scanner_text"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llc_create"
        android:layout_width="0dp"
        android:layout_height="152dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_f8f8fa_12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_set"
        app:layout_constraintLeft_toRightOf="@id/llc_scan">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="56dp"
            android:layout_height="75dp"
            android:src="@drawable/create"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/create_text"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <include
        android:layout_width="match_parent"
        android:layout_height="205dp"
        layout="@layout/native_ad_home"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/llc_scan"/>
</androidx.constraintlayout.widget.ConstraintLayout>