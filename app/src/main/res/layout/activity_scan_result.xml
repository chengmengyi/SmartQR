<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FA">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:src="@drawable/bg3"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back"
        android:layout_margin="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_view"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan"
        android:textSize="16sp"
        android:textColor="#031727"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"/>
    <View
        android:id="@+id/bg_view"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:layout_margin="20dp"
        android:background="@drawable/bg_ffffff_8dp"
        app:layout_constraintTop_toBottomOf="@id/iv_back"/>
    <View
        android:id="@+id/view"
        android:layout_width="4dp"
        android:layout_height="12dp"
        android:layout_margin="12dp"
        android:background="@drawable/bg_005dfe_2dp"
        app:layout_constraintTop_toTopOf="@id/bg_view"
        app:layout_constraintLeft_toLeftOf="@id/bg_view"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URL"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#031727"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintLeft_toRightOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/view"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llc_func"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12dp"
        app:layout_constraintRight_toRightOf="@id/bg_view"
        app:layout_constraintBottom_toBottomOf="@id/bg_view">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_copy"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icon_copy"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_search"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/icon_search"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_share"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/icon_share"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <View
        android:id="@+id/view_line"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="#14292C39"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintLeft_toLeftOf="@id/bg_view"
        app:layout_constraintRight_toRightOf="@id/bg_view"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:overScrollMode="never"
        app:layout_constraintLeft_toLeftOf="@id/bg_view"
        app:layout_constraintRight_toRightOf="@id/bg_view"
        app:layout_constraintTop_toBottomOf="@id/view_line"
        app:layout_constraintBottom_toTopOf="@id/llc_func">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#8A8A8A"
            />
    </androidx.core.widget.NestedScrollView>

    <include
        android:layout_width="match_parent"
        android:layout_height="314dp"
        android:layout_margin="20dp"
        layout="@layout/native_ad_result"
        app:layout_constraintTop_toBottomOf="@id/bg_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>